#ifdef REG_R1
#define CATCH_FRAME_ENTRY_TEMPLATE(label,ret) 	\
   label					\
   {						\
      Sp = Sp + SIZEOF_StgCatchFrame; 		\
      jump ret;					\
   }
#else
#define CATCH_FRAME_ENTRY_TEMPLATE(label,ret) 	\
   label					\
   {						\
      W_ rval;					\
      rval = Sp(0);				\
      Sp_adj(1);				\
      Sp = Sp + SIZEOF_StgCatchFrame - WDS(1);  \
      Sp(0) = rval;				\
      jump ret;					\
   }
#endif

