runtests::
	@echo '###############################################################'
	@echo '# Validation tests for the reader in the compiler.            #'
	@echo '###############################################################'

RunStdTest(read001,$(GHC), -noC -ddump-rif2hs read001.hs -o2 read001.stderr)
RunStdTest(read002,$(GHC), -noC -ddump-rif2hs read002.hs -o2 read002.stderr)
/* gap 003 */
