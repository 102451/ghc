#!/usr/bin/env sh

set -e

TOOL_ARGS=$(TERM=dumb CABFLAGS=-v0 "hadrian/build-cabal" tool-args -q --build-root=.hadrian_ghci --flavour=ghc-in-ghci "$@" | dos2unix | paste -s -d ' ' - )
GHC_FLAGS="$GHC_FLAGS $TOOL_ARGS"
ghci $GHC_FLAGS "$@" -fno-code -fwrite-interface -hidir=.hadrian_ghci/interface -O0 ghc/Main.hs +RTS -A128m
